{
  "schemaVersion": 1,
  "id": "voicemessages",
  "version": "${version}",
  "name": "Voice Messages",
  "description": "Voice messages in minecraft chat",
  "authors": [
    "DimasKama"
  ],
  "license": "All-Rights-Reserved",
  "icon": "assets/voicemessages/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "ru.dimaskama.voicemessages.fabric.VoiceMessagesFabric"
    ],
    "client": [
      "ru.dimaskama.voicemessages.fabric.client.VoiceMessagesFabricClient"
    ],
    "voicechat": [
      "ru.dimaskama.voicemessages.VoiceMessagesPlugin"
    ]
  },
  "mixins": [
    "voicemessages.mixins.json"
  ],
  "depends": {
    "fabricloader": "*",
    "minecraft": ">=${min_minecraft_version}",
    "java": ">=21",
    "fabric-api": "*"
  },
  "recommends": {
    "voicechat": "*"
  }
}
